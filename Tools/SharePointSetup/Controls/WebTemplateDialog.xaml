<Window x:Class="CAS.SharePoint.Setup.Controls.WebTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Web template collection selection" MinHeight="300" MinWidth="600" Icon="/CAS.SharePointSetup;component/Images/blok_danych_48_full.ico" ShowInTaskbar="False"
        Loaded="x_WindowLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox Name="x_TemplatesListBox" SelectionMode="Single" Grid.Row="0">
        </ListBox> 
        <StackPanel Grid.Row="1" FlowDirection="LeftToRight" HorizontalAlignment="Stretch" Orientation="Horizontal" >
            <Button MinWidth="100" Margin="5" Click="x_OKButton_Click" IsDefault="True" >OK</Button>
            <Button MinWidth="100"  Margin="5" IsCancel="True" >Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
